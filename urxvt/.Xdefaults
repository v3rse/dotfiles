! urxvt

! Terminal
urxvt*termName: rxvt-unicode-256color

! Color Theme
#include "/home/v3rse/.term_colors/snazzy.Xcolors"

! Fonts
urxvt*font: xft:Hack:size=13,\
            xft:FontAwesome:Regular:size=13
urxvt*boldFont: xft:Hack:bold:size=13
urxvt.letterSpace: -1

urxvt*.depth: 20

xft.dpi: 100
xft.autohint: 0
xft.antialias: 1
xft.hinting: true
xft.hintstyle: hintslight
xft.rgba: rgb
xft.lcdfilter: lcddefault
xft.weight: 15


! Interface
urxvt*borderless: 1
urxvt*saveLines: 2000
urxvt*fading: 2
urxvt*scrollBar: false
urxvt*transparent: false
urxvt*internalBorder: 15

! Modifier
urxvt.modifier: super


! Extensions
urxvt.perl-ext-common: default,url-select,clipboard

! Url-select
urxvt.keysum.M-u: perl:url-select:select_next
urxvt.url-select.autocopy: true
urxvt.url-select.button: 2
urxvt.url-select.launcher: qutebrowser 
urxvt.url-select.underline: true
urxvt.keysym.M-o:       perl:url-select:select_next
urxvt.keysym.M-Escape:  perl:keyboard-select:activate
urxvt.keysym.M-s:       perl:keyboard-select:search

! Clipboard : haven't managed to get it working (install urxvt-perls)
urxvt.keysym.Control-Shift-C: perl:clipboard:copy
urxvt.keysym.Control-Shift-V: perl:clipboard:paste

! Disable ISO
urxvt.iso14755: false
urxvt.iso14755_52: false

! Stop capitalization
urxvt*keysym.Home: \033[1~
urxvt*keysym.End: \033[4~

